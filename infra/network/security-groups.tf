resource "aws_security_group" "public_sg" {
  name        = "${var.ENVIRONMENT_NAME}-public-sg"
  description = "Security Group for public subnets"
  vpc_id      = aws_vpc.atomiklabs_vpc.id

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.ENVIRONMENT_NAME}-public-sg"
  }
}